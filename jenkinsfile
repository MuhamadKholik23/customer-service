pipeline {
    agent any
    environment {
        MVN_HOME = 'mvn'
    }
    stages {
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "${tool name: env.MVN_HOME, type: 'maven'} clean verify sonar:sonar"
                    echo 'SonarQube Analysis Completed'
                }
            }
        }
        stage("Quality Gate") {
            steps {
                // Tunggu hingga Quality Gate selesai sebelum melanjutkan
                waitForQualityGate abortPipeline: true
                echo 'Quality Gate Completed'
            }
        }
    }
}
