pipeline {
    agent any
    environment {
        MVN_HOME = 'mvn'
    }
    stages {
        stage('SonarQube Analysis') {
            steps {
                script {
                    git 'https://github.com/MuhamadKholik23/customer-service.git'

                    // Menjalankan analisis SonarQube
                    withSonarQubeEnv('SonarQubeServer') {
                        sh "${tool name: env.MVN_HOME, type: 'maven'}/bin/mvn clean install"
                        sh "${tool name: env.MVN_HOME, type: 'maven'}/bin/mvn clean verify sonar:sonar -Dsonar.projectSettings=sonar-project.properties"
                        echo 'SonarQube Analysis Completed'
                    }
                }
            }
        }
        stage("Quality Gate") {
            steps {
                waitForQualityGate abortPipeline: true
                echo 'Quality Gate Completed'
            }
        }
    }
}
