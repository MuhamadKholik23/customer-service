pipeline {
    agent any
    environment {
        MVN_HOME = 'mvn'
        SONAR_HOST_URL = 'http://192.168.1.5:9005/'
    }
    stages {
        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarServer') {
                        sh "${tool name: env.MVN_HOME, type: 'maven'}/bin/mvn clean verify sonar:sonar -Dsonar.host.url=${env.SONAR_HOST_URL}"
                    }
                }
            }
        }
        stage("Quality Gate") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
