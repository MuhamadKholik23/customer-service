pipeline {
    agent any

    environment {
        MVN_HOME = 'mvn'
    }

    stages {

        stage('Run Spring Boot Application') {
            steps {
                // Menjalankan aplikasi Spring Boot dengan Maven
                sh "${tool name: env.MVN_HOME, type: 'maven'}/bin/mvn clean install"
                sh "${tool name: env.MVN_HOME, type: 'maven'}/bin/mvn spring-boot:run"
            }
        }
    }
}
